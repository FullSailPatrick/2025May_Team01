<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayModesScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/panel00"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/panel01"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="@drawable/panel_pic2">
            <Button
                android:id="@+id/questModeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quest Mode" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/panel02"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:background="@drawable/panel_pic">
            <Button
                android:id="@+id/freePlayModeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Play Mode" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/panel03"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="@drawable/bg_panel03">
        <Button
            android:id="@+id/flashModeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flash Mode"/>
         </FrameLayout>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>